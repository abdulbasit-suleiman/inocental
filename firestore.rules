rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own excel sheets
    match /excelSheets/{sheetId} {
      allow read, write, create, update, delete: if request.auth != null 
        && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
    }
    
    // Allow users to query sheets by name and userId
    match /excelSheets {
      allow list: if request.auth != null;
    }
    
    // Admin access for all sheets
    match /excelSheets/{sheetId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
  }
}